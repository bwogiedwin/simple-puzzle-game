            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        
        .game-stats h3 {
            margin-bottom: 15px;
            color: #4fc3f7;
            text-align: center;
        }
        
        .stat {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            padding-bottom: 8px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .game-controls {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
        
        .control-btn {
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
